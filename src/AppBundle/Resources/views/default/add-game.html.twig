{% extends '@App/base.html.twig' %}

{% block headerTitle %}
    Spiel hinzufügen
{% endblock %}

{% block navigation %}
<ul id="nav-mobile" class="right hide-on-med-and-down">
    <li><a href="{{ path('homepage') }}">Startseite</a></li>
</ul>
{% endblock %}
{% block body %}
    <div class="container">
        <div>
            <p>
                {{ message }}
            </p>
        </div>

        <form method="post">
            <div class="row">
                <div class="input-field col s12">
                    <label for="game-name">Name</label>
                    <input id="game-name" type="text" class="validate" name="name"/>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12">
                    <select id="rank-type" class="validate" name="rank-type">
                        <option value="" disabled selected>Wähle eine option</option>
                        {% for rankType in rankTypes %}
                            <option value="{{ rankType.id }}">{{ rankType.name }}</option>
                        {% endfor %}
                    </select>
                    <label for="rank-type">Ranglisten typ</label>
                </div>
            </div>
            <div class="row">
                <div class="col s12">
                    <p>
                        <input type="checkbox" id="teamgame" name="teamgame"/>
                        <label for="teamgame">Teamgame</label>
                    </p>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12">
                    <button class="btn waves-effect waves-light" type="submit" name="action">Absenden
                    </button>
                </div>
            </div>
        </form>
        <a href="{{ path('homepage') }}">Zurück</a>
    </div>
{% endblock %}
